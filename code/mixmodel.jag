data{
    N <- length(y)    
}

model{
    ## likelihood for typical mixture
    for(i in 1:N){
        y[i] ~ dpois(theta[ clust[i] ])
        clust[i] ~ dcat( pClust[1:3] )
    }
    ## priors
    for(j in 1:4){
        theta[1:4] <- normal(mu, tau)T(0,)
    }
    pClust ~ ddirch(1, 1, 1)
    mu ~ dnorm(5000, 0.001)T(0,)
    tau ~ dgamma(0.001, 0.001)
}
